<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sistema de Laboratorio - Registro</title>

    <!-- ICONOS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <link rel="stylesheet" href="Style1.css">

    <style>
        /* ===== MEN DEL ENGRANE ===== */
        .icon-group {
            position: relative;
        }

        #cogButton {
            background: none;
            border: none;
            font-size: 22px;
            cursor: pointer;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            right: 0;
            top: 35px;
            background: #fff;
            min-width: 220px;
            border-radius: 8px;
            box-shadow: 0 10px 25px rgba(0,0,0,.15);
            z-index: 100;
            overflow: hidden;
        }

        .dropdown-content button,
        .dropdown-content a {
            width: 100%;
            padding: 12px 15px;
            border: none;
            background: none;
            text-align: left;
            cursor: pointer;
            font-size: 14px;
        }

        .dropdown-content button:hover,
        .dropdown-content a:hover {
            background: #f1f1f1;
        }

        .dropdown-content hr {
            margin: 0;
            border: none;
            border-top: 1px solid #ddd;
        }

        .logout {
            color: #d00000;
            font-weight: bold;
        }
    </style>
</head>
<body>

<div class="student-form-wrapper">
    <div class="dashboard-header">
        <h2>Registro de Acceso</h2>

        <!-- 锔 ENGRANE -->
        <div class="icon-group">
            <button id="cogButton">
                <i class="fas fa-cog"></i>
            </button>

            <div class="dropdown-content" id="settingsMenu">
                <button onclick="reportProblem()">
                    锔 Reportar Problema
                </button>

                <button onclick="checkSystemStatus()">
                     Estado del Sistema
                </button>

                <hr>

                <a href="/auth/logout" class="logout">
                     Cerrar Sesi贸n
                </a>
            </div>
        </div>
    </div>

    <!-- FORMULARIO -->
    <form id="studentForm" method="POST" action="/alumno/registrar">
        <h3 class="section-title">1. Verificaci贸n</h3>

        <label for="studentCareer">Carrera</label>
        <select id="studentCareer" name="studentCareer" required></select>

        <label for="studentGroup">Grupo</label>
        <select id="studentGroup" name="studentGroup" required></select>

        <div id="statusMessage" class="status-disabled">
            Seleccione sus datos para verificar acceso.
        </div>

        <h3 class="section-title" id="machineTitle" style="display:none;">
            2. Datos de Bit谩cora
        </h3>

        <div id="registrationContent" class="registration-content">
            <div class="panel">
                <h4>Detalles del Usuario</h4>

                <label>Nombre Completo</label>
                <input type="text" readonly value="<%= user.nombre %>">

                <label>Matr铆cula / ID</label>
                <input type="text" readonly value="<%= user.email %>">

                <label for="machineNumber">N煤mero de Equipo</label>
                <select id="machineNumber" name="machineNumber" required></select>

                <label for="observation">Observaciones</label>
                <textarea id="observation" name="observation"></textarea>
            </div>

            <div class="panel">
                <h4>Informaci贸n de la Sesi贸n</h4>
                <div class="info-box">Laboratorio: <strong id="infoLab">---</strong></div>
                <div class="info-box">Docente: <strong id="infoTeacher">---</strong></div>
                <div class="info-box">Grupo: <strong id="infoGroup">---</strong></div>
            </div>
        </div>

        <div class="btn-group">
            <button type="submit" id="registerButton" disabled>
                REGISTRAR ENTRADA
            </button>
            <button type="button" class="btn-update" onclick="checkAccess()">
                Actualizar
            </button>
        </div>
    </form>
</div>

<script>
    /* ===== ABRIR / CERRAR MEN ===== */
    const cogButton = document.getElementById("cogButton");
    const menu = document.getElementById("settingsMenu");

    cogButton.addEventListener("click", (e) => {
        e.stopPropagation();
        menu.style.display = menu.style.display === "block" ? "none" : "block";
    });

    document.addEventListener("click", () => {
        menu.style.display = "none";
    });

    /* ===== ACCIONES ===== */
    function reportProblem() {
        window.location.href = "/reportar-problema";
    }

    function checkSystemStatus() {
        window.location.href = "/estado-sistema";
    }
</script>

</body>
</html>
